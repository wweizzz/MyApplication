<?xml version="1.0" encoding="utf-8"?>
<com.luck.picture.lib.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_iv_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/item_iv_del"
        android:layout_width="@dimen/basics_dimen_24"
        android:layout_height="@dimen/basics_dimen_24"
        android:layout_alignTop="@id/item_iv_pic"
        android:layout_alignEnd="@id/item_iv_pic"
        android:src="@drawable/ic_launcher"
        android:visibility="gone"
        tools:visibility="visible" />

</com.luck.picture.lib.widget.SquareRelativeLayout>