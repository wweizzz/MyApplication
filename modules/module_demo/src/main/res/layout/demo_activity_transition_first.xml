<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.sample.TransitionFirstActivity">

    <Button
        android:id="@+id/transition_explode"
        android:layout_width="@dimen/basics_dimen_width_320"
        android:layout_height="@dimen/basics_dimen_48"
        app:layout_constraintBottom_toTopOf="@+id/transition_slide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/transition_slide"
        android:layout_width="@dimen/basics_dimen_width_320"
        android:layout_height="@dimen/basics_dimen_48"
        app:layout_constraintBottom_toTopOf="@+id/transition_fade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transition_explode" />

    <Button
        android:id="@+id/transition_fade"
        android:layout_width="@dimen/basics_dimen_width_320"
        android:layout_height="@dimen/basics_dimen_48"
        app:layout_constraintBottom_toTopOf="@+id/transition_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transition_slide" />

    <Button
        android:id="@+id/transition_share"
        android:layout_width="@dimen/basics_dimen_width_320"
        android:layout_height="@dimen/basics_dimen_48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transition_fade" />

</androidx.constraintlayout.widget.ConstraintLayout>